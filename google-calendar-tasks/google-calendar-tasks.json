{
  "$id": "https://raw.githubusercontent.com/Valota/data-syntaxes/master/google-calendar-tasks/google-calendar-tasks.json",
  "$schema": "http:\/\/json-schema.org\/draft-07\/schema#",
  "description": "Google Calendar tasks data syntax for Valotalive",
  "type": "object",
  "properties": {
	"categories": {
	  "type": "array",
	  "items": {
		"type": "object",
		"properties": {
		  "id": {
			"type": "integer"
		  },
		  "data": {
			"type": "array",
			"items": {
			  "type": "object",
			  "properties": {
				"startDate": {
				  "type": "string"
				},
				"endDate": {
				  "type": "string"
				},
				"startIsoDate": {
				  "type": ["string" , "null"]
				},
				"endIsoDate": {
				  "type": ["string" , "null"]
				},
				"all_day": {
					"type": "string",
					"enum": ["1", "0"]
				},
				"type": {
				  "type": "string"
				},
				"title": {
				  "type": "string"
				}
			  },
			  "required": [
				"startDate",
				"type",
				"title"
			  ]
			}
		  }
		},
		"required": [
		  "id",
		  "data"
		]
	  }
	}
  },
  "required": [
	"categories"
  ]
}
