{
  "$id": "https://raw.githubusercontent.com/Valota/data-syntaxes/master/google-calendar-tasks/google-calendar-tasks.json",
  "$schema": "http:\/\/json-schema.org\/draft-07\/schema#",
  "description": "Google Calendar tasks data syntax for Valotalive",
  "definitions": {
	"colorObj": {
	  "type": "object",
	  "title": "Color",
	  "description": "Color",
	  "properties": {
		"id": {
		  "type": "integer",
		  "minimum": 0
		},
		"background": {
		  "type": "string",
		  "title": "Color string",
		  "description": "Color string for the web",
		  "faker":"color.rgb"
		},
		"foreground": {
		  "type": "string",
		  "title": "Color string",
		  "description": "Color string for the web",
		  "faker":"color.rgb"
		}
	  },
	  "required": [
		"id",
		"background",
		"foreground"
	  ]
	}
  },
  "type": "object",
  "properties": {
	"categories": {
	  "type": "array",
	  "items": {
		"type": "object",
		"properties": {
		  "id": {
			"type": "integer"
		  },
		  "data": {
			"type": "array",
			"items": {
			  "type": "object",
			  "properties": {
				"startDate": {
				  "type": "string",
				  "vlt": {
					"formattedDateWithinFromNow": [
					  -2,
					  14,
					  "d",
					  "X"
					]
				  }
				},
				"endDate": {
				  "type": "string",
				  "vlt": {
					"formattedDateWithinFromNow": [
					  -2,
					  14,
					  "d",
					  "X"
					]
				  }
				},
				"startIsoDate": {
				  "anyOf": [
					{
					  "type": "string",
					  "vlt": {
						"formattedDateWithinFromNow": [
						  -2,
						  14,
						  "d",
						  "yyyy-MM-dd"
						]
					  }
					},
					{
					  "type": "null"
					}
				  ]
				},
				"endIsoDate": {
				  "anyOf": [
					{
					  "type": "string",
					  "vlt": {
						"formattedDateWithinFromNow": [
						  -2,
						  14,
						  "d",
						  "yyyy-MM-dd"
						]
					  }
					},
					{
					  "type": "null"
					}
				  ]
				},
				"all_day": {
				  "type": "string",
				  "enum": [
					"1",
					"0"
				  ]
				},
				"type": {
				  "type": "string",
				  "enum": [
					"one_day_task",
					"multi_day_task"
				  ]
				},
				"title": {
				  "type": "string",
				  "faker": "lorem.sentence"
				},
				"color": {
				  "$ref": "#/definitions/colorObj"
				}
			  },
			  "required": [
				"startDate",
				"type",
				"title"
			  ]
			}
		  },
		  "color": {
			"$ref": "#/definitions/colorObj"
		  }
		},
		"required": [
		  "id",
		  "data"
		]
	  }
	}
  },
  "required": [
	"categories"
  ]
}
